<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ColorFragment">

    <Button
        android:id="@+id/btn_fetch_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fetch_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Colors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_fetch_color" />

    <Button
        android:id="@+id/btn_load_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Color"
        app:layout_constraintEnd_toStartOf="@id/btn_fetch_color"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_load_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Colors"
        app:layout_constraintEnd_toStartOf="@id/btn_fetch_colors"
        app:layout_constraintTop_toBottomOf="@id/btn_load_color" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_load_colors">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv_info" />
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
